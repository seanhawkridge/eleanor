---
import Base from '../layouts/Base.astro';
---

<Base title="Contact" description="Get in touch with Eleanor">
  <section class="max-w-3xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold tracking-tight">Contact</h1>
    <p class="mt-4 text-lg text-gray-600">
      Interested in working together? I'd love to hear from you.
    </p>

    <div class="mt-12 space-y-6">
      <div>
        <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Email</h2>
        <a href="mailto:hello@eleanor.design" class="mt-1 block text-blue-600 hover:text-blue-800 transition-colors">
          hello@eleanor.design
        </a>
      </div>

      <div>
        <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">Social</h2>
        <ul class="mt-1 space-y-1">
          <li><a href="#" class="text-blue-600 hover:text-blue-800 transition-colors">LinkedIn</a></li>
          <li><a href="#" class="text-blue-600 hover:text-blue-800 transition-colors">Dribbble</a></li>
          <li><a href="#" class="text-blue-600 hover:text-blue-800 transition-colors">Instagram</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-16 rounded-lg border border-gray-200 p-8">
      <h2 class="text-xl font-semibold">Send a message</h2>
      <form class="mt-6 space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none" />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <textarea id="message" name="message" rows="4" required class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none"></textarea>
        </div>
        <button type="submit" class="rounded-md bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800 transition-colors">
          Send
        </button>
      </form>
    </div>
  </section>
</Base>
