---
interface Props {
  title: string;
  description: string;
  image?: string;
  tags?: string[];
  slug: string;
}

const { title, description, image, tags = [], slug } = Astro.props;
---

<a href={`/projects/${slug}`} class="group block rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
  {image && (
    <div class="aspect-video bg-gray-100 overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
    </div>
  )}
  <div class="p-5">
    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">{title}</h3>
    <p class="mt-2 text-sm text-gray-600 line-clamp-2">{description}</p>
    {tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>
